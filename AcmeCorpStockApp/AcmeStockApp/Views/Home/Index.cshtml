@{
    ViewData["Title"] = "Home Page";
}

<title>@ViewData["Title"]</title>

<style>

    h1 {
        font-family: Arial;
        font-size: 18pt;
        font-weight: normal;
    }


    .button {
        font-family: Arial;
        font-size: 10pt;
        font-weight: normal;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-bottom: 10px;
        display: block;
        width: 180px;
        height: 50px;
        text-align: center;
    }

    .create {
        background-color: green;
        color: white;
    }

    .find {
        background-color: dodgerblue;
        color: white;
    }

    .update {
        background-color: #ffc107;
        color: black;
    }

    .delete {
        background-color: red;
        color: #ffc107;
    }

    .exit {
        background-color: #444444;
        color: white;
    }

        .exit .bi {
            margin-left: 5px;
            font-size: 1.2rem;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Acme Stock Application</h3>
                </div>
                <div class="card-body" style="height: 100%;">
                    <form asp-action="Index">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="text-center">
                            <h1 class="text-left">Acme User List</h1>
                        </div>

                        <div class="text-center container-fluid align-items-start ">
                            <a asp-controller="Home" asp-action="Create" class="button create">Create New Product</a>
                            <a asp-controller="Home" asp-action="Find" class="button find">Find Product</a>
                            <a asp-controller="Home" asp-action="FindUpdate" class="button update">Update Product</a>
                            <a asp-controller="Home" asp-action="Delete" class="button delete">Delete Product</a>

                            <a asp-controller="Home" asp-action="CloseWindow" class="button exit">
                                Exit
                                <span><i class="bi bi-box-arrow-right"></i></span>
                            </a>

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @TempData["ErrorMessage"]
                                </div>
                            }
                            @if (TempData["ChangeSuccess"] != null)
                            {
                                <div class="alert alert-success" role="alert">
                                    @TempData["ChangeSuccess"]
                                </div>
                            }


                            <div class="d-flex justify-content-start h-100">
                                <a asp-controller="Authentication" asp-action="ChangePassword" class="ml-3">Change Password</a>

                                <a asp-controller="Authentication" asp-action="ListUsers" class="ml-3">List Users</a>

                                <a asp-controller="Authentication" asp-action="Registrar" class="ml-3">Registrar Only</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
