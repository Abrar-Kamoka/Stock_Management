@model AcmeStockApp.Models.Product
@{
    ViewData["Title"] = "SaveUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Update Product</h3>
                </div>
                <div class="card-body" style="height: 100%;">
                    <form asp-action="SaveUpdate" method="post">
                        <div class="input-group">
                            <input asp-for="Id" class="form-control" style="width: 100px;" disabled/>
                            <div class="input-group-append">
                                <button type="button" class="btn btn-secondary ml-3" onclick="clearFields(); enableInput()">Clear</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" style="width: 350px;" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity"></label>
                            <input asp-for="Quantity" class="form-control" style="width: 200px;" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control" style="width: 200px;" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Manufactured"></label>
                            <input asp-for="Manufactured" class="form-control" style="width: 210px;" disabled />
                        </div>

                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        <div class="card-footer" style="height: 100%; width: 100%;">
                            <div class="d-flex justify-content-end align-items-center h-100">
                                <button asp-controller="Home" asp-action="FindUpdate" type="submit" class="btn btn-primary ml-2" name="action" value="Find">Find</button>
                                <button type="submit" class="btn btn-success ml-2" name="action" value="Update" disabled>Save</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-dark ml-2">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function clearFields() {
            document.getElementById("Id").value = "";
            document.getElementById("Name").value = "";
            document.getElementById("Quantity").value = "";
            document.getElementById("Price").value = "";
            document.getElementById("Manufactured").value = "";
        }

        function enableInput() {
            document.getElementById("Id").disabled = false;
        }
    </script>
}