@model IEnumerable<AcmeStockApp.Models.StockAppUser>

@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Acme User List</h3>
                    <h6 class="card-subtitle">Here is a list of all the wonderful users:</h6>
                </div>
                <div class="card-body" style="height: 100%;">
                    <form asp-action="ListUsers">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserType)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserTypeString)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="card-footer" style="height: 100%; width: 100%;">
                            <div class="d-flex justify-content-end align-items-center h-100">

                                <button asp-controller="Home" asp-action="Index" type="submit" value="Back" class="btn btn-secondary ml-3">Back</button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
