@model AcmeStockApp.DTOs.UserChangePasswordDTO
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Acme Change Password</h3>
                    <h6 class="card-subtitle">Tired of your old password?  Change it here</h6>
                </div>
                <div class="card-body" style="height: 100%;">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h2 hidden>@ViewBag.Mysession</h2>
                        @*<p hidden>@Model.Email</p>*@
                        <input asp-for="@Model.Email" hidden />
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="card-footer" style="height: 100%; width: 100%;">
                            <div class="d-flex justify-content-end align-items-center h-100">

                                <button asp-controller="Home" asp-action="Index" type="submit" value="Cancel" class="btn btn-secondary ml-3">Cancel</button>

                                <button type="submit" value="Update" class="btn btn-success ml-3">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
