@model AcmeStockApp.Models.StockAppUser

@{
    ViewData["Title"] = "ForgotPassword"; 
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Acme Password Recovery</h3>
                    <h6 class="card-subtitle">Forgot your password?  Enter your email to recover your password</h6>
                </div> 
                <div class="card-body" style="height: 100%;">
                    <form  asp-controller="Authentication" asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Email" class="control-label">Email</label>
                            <input asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="card-footer" style="height: 100%; width: 100%;">
                            <div class="d-flex justify-content-end align-items-center h-100">

                                @*<a asp-controller="Authentication" asp-action="Login" class="ml-3">Back to Login</a>*@

                                <button asp-controller="Authentication" asp-action="Login" type="submit" value="Cancel" class="btn btn-secondary ml-3">Cancel</button>

                                <button type="submit" value="Submit" class="btn btn-success ml-3">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

