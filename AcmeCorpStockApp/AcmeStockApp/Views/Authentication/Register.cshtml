@model AcmeStockApp.Models.StockAppUser

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Acme Register</h3>
                    <h6 class="card-subtitle">Sign up for a new account with Acme Corporation</h6>
                </div>
                <div class="card-body" style="height: 100%;">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserType" class="control-label">User Type:</label>
                            <div class="form-check">
                                <input type="radio" asp-for="UserType" class="form-check-input" value="true" id="adminRadio">
                                <label class="form-check-label" for="adminRadio">Admin</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" asp-for="UserType" class="form-check-input" value="false" id="registrarRadio">
                                <label class="form-check-label" for="registrarRadio">Registrar</label>
                            </div>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>
                        <div class="card-footer" style="height: 100%; width: 100%;">
                            <div class="d-flex justify-content-end align-items-center h-100">

                                <a asp-controller="Authentication" asp-action="Login" class="ml-3">Already Login</a>

                                <a asp-controller="Authentication" asp-action="ForgotPassword" class="ml-3">Forgot Password</a>

                                <button asp-controller="Authentication" asp-action="Login" type="submit" value="Cancel" class="btn btn-secondary ml-3">Cancel</button>

                                <button type="submit" value="Create Account" class="btn btn-success ml-3">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
