@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Acme Registrar Only</h3>
                <h6 class="card-subtitle">Do you want to know a secret?</h6>
            </div>
            <div class="card-body" style="height: 100%;">

                <form asp-action="Registrar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <h3 style ="color:green">You are more powerful than any other users!</h3>
                    </div>
                    <div class="card-footer" style="height: 100%; width: 100%;">
                        <div class="d-flex justify-content-end align-items-center h-100">

                            <button asp-controller="Home" asp-action="Index" type="submit" value="Close" class="btn btn-secondary ml-3">Close</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
